{% extends 'layouts/app.twig' %}

{% block title %}Berserkers | Home{% endblock %}

{% block content %}
<div class="row h-100 body align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-6 col-10-md col-12-sm">
                <fieldset class="fieldset dns-search">
                    <legend>Welcome {{ clientIp() | raw }}</legend>
                    <form action="{{  path_for('post.results') }}">
                        {{  csrf_field() | raw }}
                        <div class="form-group row">
                            <input
                                class="form-control form-control-lg seamless-input bg-dark"
                                type="text"
                                title="DNS Lookup"
                                placeholder="domain or ip"
                                minlength="6"
                                maxlength="60"
                                required
                            >
                        </div>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
                    </form>
                </fieldset>
            </div>
        </div>
    </div>
</div>
{% endblock %}